<!DOCTYPE html>
<html lang="en">
	<head>
		<title>New Connection</title>
		<%- include('partials/head.ejs')%>
	</head>
	<body>
    <%- include('partials/header.ejs')%>
    <%- include('partials/navigation.ejs')%>
  
    <div class="jumbotron bg-white">
      <div class="container">
        <h1 class="display-4">Create a new Connection</h1>
        <p class="lead">Please enter your connection details</p>
        <hr class="my-4">
        <div class="row">
          <div class="col-sm col-lg-9 col-md-9">
            <div class="error-message" style="color:red">
              <% if(errorMsg.length>0){ %>
                <% errorMsg.forEach(function(item){ %>
                  <p><span><%= item.msg %></span></p>
                <% }); %>
              <% } %>
            </div>
            <form action='/newConnection' method='post' class="required">
              <div class="form-group row">
                <label for="connection_category" class="col col-form-label control-label">Connection Category</label>
                <div class="col-9">
                  <input type="text" class="form-control" name="connection_category">
                </div>
              </div>
              <div class="form-group row">
                <label for="connection_name" class="col col-form-label control-label">Connection Name</label>
                <div class="col-9">
                  <input type="text" class="form-control" name="connection_name">
                </div>
              </div>
              <div class="form-group row">
                <label for="hostedBy" class="col col-form-label control-label">Connection Details</label>
                <div class="col-9">
                  <input type="text" class="form-control" name="details">
                </div>
              </div>
              <div class="form-group row">
                <label for="hostedBy" class="col col-form-label control-label">Hosted By</label>
                <div class="col-9">
                  <input type="text" class="form-control" name="hostedBy">
                </div>
              </div>
              <div class="form-group row">
                <label for="dateAndTime" class="col col-form-label control-label">When</label>
                <div class="col-9">
                  <input type="datetime-local" class="form-control" name="dateAndTime">
                </div>
              </div>
              <div class="form-group row">
                <label for="image" class="col col-form-label"> Image Url </label>
                <div class="col-9">
                  <input type="text" class="form-control" name="image">
                </div>
              </div>
              
              <div class="form-group row justify-content-center">
                <div class="justify-content-center">
                  <button type="submit" class="btn btn-primary">Create Connection</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %>
  
	</body>
</html>
